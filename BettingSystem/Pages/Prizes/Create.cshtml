@page
@model BettingSystem.Pages.Prizes.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Užsakyti nują</h1>

<h4>Prizai</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Prize.Title" class="control-label"></label>
                <input asp-for="Prize.Title" class="form-control" />
                <span asp-validation-for="Prize.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prize.Quantity" class="control-label"></label>
                <input asp-for="Prize.Quantity" class="form-control" />
                <span asp-validation-for="Prize.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prize.Price" class="control-label"></label>
                <input asp-for="Prize.Price" class="form-control" />
                <span asp-validation-for="Prize.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Užsakyti" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Atgal į sąrašą</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
